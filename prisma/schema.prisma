generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  user     String
  email    String @unique
  password String
}

model Animes {
  id           Int     @id @default(autoincrement())
  title        String
  average      String
  synopisis    String  @db.Text
  capeImage    String
  opinionNinja String? @db.Text
  categoryId   Int?
  category Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
  animes Animes[]
}
